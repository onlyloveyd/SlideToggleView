<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlideToggleView">
        <attr name="stv_text" format="string"/>
        <attr name="stv_textSize" format="dimension"/>
        <attr name="stv_textColor" format="color"/>
        <attr name="stv_slideBlock" format="reference"/>
        <attr name="stv_blockLeftMargin" format="dimension"/>
        <attr name="stv_blockRightMargin" format="dimension"/>
        <attr name="stv_blockTopMargin" format="dimension"/>
        <attr name="stv_blockBottomMargin" format="dimension"/>
        <attr name="stv_remain" format="dimension"/>
    </declare-styleable>

    <attr name="shimmer_clip_to_children" format="boolean"/>
    <attr name="shimmer_colored" format="boolean"/>
    <attr name="shimmer_base_color" format="color"/>
    <attr name="shimmer_highlight_color" format="color"/>
    <attr name="shimmer_base_alpha" format="float"/>
    <attr name="shimmer_highlight_alpha" format="float"/>
    <attr name="shimmer_auto_start" format="boolean"/>
    <attr name="shimmer_duration" format="integer"/>
    <attr name="shimmer_repeat_count" format="integer"/>
    <attr name="shimmer_repeat_delay" format="integer"/>
    <attr name="shimmer_repeat_mode" format="enum">
        <enum name="restart" value="1"/>
        <enum name="reverse" value="2"/>
    </attr>
    <attr name="shimmer_direction" format="enum">
        <enum name="left_to_right" value="0"/>
        <enum name="top_to_bottom" value="1"/>
        <enum name="right_to_left" value="2"/>
        <enum name="bottom_to_top" value="3"/>
    </attr>
    <attr name="shimmer_dropoff" format="float"/>
    <attr name="shimmer_fixed_width" format="dimension"/>
    <attr name="shimmer_fixed_height" format="dimension"/>
    <attr name="shimmer_intensity" format="float"/>
    <attr name="shimmer_width_ratio" format="float"/>
    <attr name="shimmer_height_ratio" format="float"/>
    <attr name="shimmer_shape" format="enum">
        <enum name="linear" value="0"/>
        <enum name="radial" value="1"/>
    </attr>
    <attr name="shimmer_tilt" format="float"/>


    <declare-styleable name="ShimmerTextView" >
        <attr name="shimmer_clip_to_children"/>
        <attr name="shimmer_colored"/>
        <attr name="shimmer_base_color"/>
        <attr name="shimmer_highlight_color"/>
        <attr name="shimmer_base_alpha"/>
        <attr name="shimmer_highlight_alpha"/>
        <attr name="shimmer_auto_start"/>
        <attr name="shimmer_duration"/>
        <attr name="shimmer_repeat_count"/>
        <attr name="shimmer_repeat_delay"/>
        <attr name="shimmer_repeat_mode"/>
        <attr name="shimmer_direction"/>

        <attr name="shimmer_dropoff"/>
        <attr name="shimmer_fixed_width"/>
        <attr name="shimmer_fixed_height"/>
        <attr name="shimmer_intensity"/>
        <attr name="shimmer_width_ratio"/>
        <attr name="shimmer_height_ratio"/>
        <attr name="shimmer_shape"/>
        <attr name="shimmer_tilt"/>
    </declare-styleable>

    <declare-styleable name="ShimmerFrameLayout">
        <attr name="shimmer_clip_to_children"/>
        <attr name="shimmer_colored"/>
        <attr name="shimmer_base_color"/>
        <attr name="shimmer_highlight_color"/>
        <attr name="shimmer_base_alpha"/>
        <attr name="shimmer_highlight_alpha"/>
        <attr name="shimmer_auto_start"/>
        <attr name="shimmer_duration"/>
        <attr name="shimmer_repeat_count"/>
        <attr name="shimmer_repeat_delay"/>
        <attr name="shimmer_repeat_mode"/>
        <attr name="shimmer_direction"/>

        <attr name="shimmer_dropoff"/>
        <attr name="shimmer_fixed_width"/>
        <attr name="shimmer_fixed_height"/>
        <attr name="shimmer_intensity"/>
        <attr name="shimmer_width_ratio"/>
        <attr name="shimmer_height_ratio"/>
        <attr name="shimmer_shape"/>
        <attr name="shimmer_tilt"/>
    </declare-styleable>


</resources>